<div class="endpoint_title">
    <h1>Agent</h1>
</div>

<div class="associated_attrs">

    <div class="product_association" id="engage">
        <div class="associated_product">
            <%= image_tag("engage.png") %>
            <h3>Engage</h3>
        </div>

        <div class="product_associated_attrs">
            <% @associated_attrs.each do |associated_attr| %>
                <% if associated_attr.associated_endpoint['Endpoints'].is_a?(Array) && associated_attr.associated_endpoint['Endpoints'].include?('Agent') %>
                    <% if associated_attr.ui_info['Agent'].is_a?(Array) && associated_attr.ui_info['Agent'].include?('Engage') %>
                        <ul>
                            <li><h5><%= associated_attr.attr_title %></h5></li>
                            <li><hr></li>
                            <li><h6><%= associated_attr.ui_info['EngageText'] %></h6></li>
                        </ul>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>

