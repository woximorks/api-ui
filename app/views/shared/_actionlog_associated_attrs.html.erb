<div class="endpoint_title">
    <h1>ActionLog</h1>
</div>

<div class="associated_attrs">

    <div class="product_association" id="roster">
    
        <div class="associated_product">
            <%= image_tag("roster.png") %>
            <h3>Roster</h3>
        </div>

        <div class="product_associated_attrs">
            <% @associated_attrs.joins(:endpoint).where(endpoints: { endpoint_title: "ActionLog" }).each do |associated_attr| %>
                <% if associated_attr.ui_info['Products'].is_a?(Array) && associated_attr.ui_info['Products'].include?('Roster') %>
                <ul>
                    <li><h5><%= associated_attr.attr.attr_title %></h5></li>
                    <li><hr></li>
                    <li><h6><%= associated_attr.ui_info['Roster'] %></h6></li>    
                </ul>
                <% end %>
            <% end %>
        </div>

    
    </div>

</div>

<%= render 'shared/nav' %>



